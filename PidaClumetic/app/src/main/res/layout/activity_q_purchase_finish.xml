<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/goMypida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgURI"
            android:layout_width="216dp"
            android:layout_height="216dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imgBtn"
            android:layout_width="216dp"
            android:layout_height="216dp"
            android:background="@drawable/btn_mypida"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/notosans"
            android:text="주문 완료!"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtn" />
    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/goMypida"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/btn_color"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="16dp"
        android:fontFamily="@font/notosans"
        android:text="MY 피다에서 확인하기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/goCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goCategory"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn_white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="16dp"
        android:fontFamily="@font/notosans"
        android:text="처음으로"
        android:textColor="@color/drk_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>